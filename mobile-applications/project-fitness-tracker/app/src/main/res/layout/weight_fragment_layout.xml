<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabutton"
            android:layout_width="48dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/ic_add"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="759dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="347dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:backgroundTint="@color/colorPrimaryDark"/>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabutton2"
            android:layout_width="48dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|end"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="759dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="347dp"
            app:layout_constraintEnd_toEndOf="parent" app:srcCompat="@drawable/ic_menu_manage"
            app:backgroundTint="@color/colorPrimary"/>
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabutton3"
            android:layout_width="48dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom|end"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="759dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="274dp" android:layout_marginEnd="89dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintHorizontal_bias="0.0">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/relativeLayout">
            <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/weight_chart"
                    android:layout_height="675dp"
                    android:layout_width="395dp"

                    tools:layout_conversion_wrapWidth="1440" tools:layout_conversion_wrapHeight="1750"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
            </com.github.mikephil.charting.charts.LineChart>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <TextView
            android:layout_width="383dp"
            android:layout_height="70dp"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:ems="10"
            android:id="@+id/editText"
            android:text="The Road May Be Bumpy But Stay Committed To The Process"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif-thin"
            android:textSize="20sp" android:textColor="@color/colorPrimary" android:textAlignment="center"
            android:textIsSelectable="false" android:textStyle="italic" android:capitalize="none"
            android:cursorVisible="false" android:focusable="auto" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="682dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="71dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:clickable="false"/>
    <TextView
            android:layout_width="383dp"
            android:layout_height="70dp"
            android:gravity="top"
            android:visibility="gone"
            android:ems="10"
            android:id="@+id/noDataText"
            android:text="@string/no_data"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp" android:textColor="@color/colorAccent" android:textAlignment="center"
            android:textIsSelectable="false" android:textStyle="italic"
            android:focusable="auto"
            android:clickable="false" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="297dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="456dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>